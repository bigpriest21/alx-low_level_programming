#!/bin/bash

# Update the system
apt update

# Install NGINX
apt install -y nginx

# Configure NGINX
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    location / {
        return 200 "Hello World!\n";
    }
}
EOF

# Restart NGINX
service nginx restart
